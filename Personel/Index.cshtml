@using MvcRestaurant.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>PERSONELLER</h2>

<table class="table table-bordered">
    <tr>
        <th>PERSONEL ID</th>
        <th>PERSONEL ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <th>@prs.ID</th>
            <th>@prs.AD</th>
            <th><a href="/Personel/PersonelSil/@prs.ID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Personel/PersonelGetir/@prs.ID" class="btn btn-success">Güncelle</a></th>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>

